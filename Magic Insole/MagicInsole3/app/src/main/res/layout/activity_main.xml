<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:textSize="27sp"
            android:fontFamily="sans-serif-condensed"
            android:text="WELCOME TO MAGIC INSOLE" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="normal|italic"
            android:paddingTop="35dp"
            android:textSize="18sp"
            android:text="@string/please_turn_on_your_bluetooth_device" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:background="@color/black"
            app:srcCompat="@android:drawable/stat_sys_data_bluetooth" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[1] Put on your Magic Insole device into your daily shoes"
            android:id="@+id/textView4"
            android:textStyle="normal|italic"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[2] Open your Magic Insole apps"
            android:id="@+id/textView5"
            android:textStyle="normal|italic"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[3] Put your phone into your pocket"
            android:id="@+id/textView6"
            android:textStyle="normal|italic"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How life become so easy for us!"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:text="LET'S GO!"
            android:layout_gravity="center"
            android:id="@+id/button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>





